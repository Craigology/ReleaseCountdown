<Window x:Class="SaturnReleaseCountdown.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Background="Black">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <TextBlock x:Name="DaysToGo" Margin="20,0,0,0" Foreground="Red" FontFamily="Segoe UI Light" FontSize="128" Text="999" VerticalAlignment="Bottom"/>
            <TextBlock Foreground="Red" Margin="20" FontFamily="Segoe UI Light" FontSize="24" Text="Days" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>    
</Window>

    